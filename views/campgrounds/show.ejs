<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card">
              <img class="card-img-top img-responsive" src="<%= campground.image %>" alt="Card image cap">
              <div class="card-body">
                  <div style="display: flex; justify-content: space-between;">
                        <h5 class="card-title"><a><%= campground.name %></a></h5>
                        <span class="card-title float-right"><h5>$9.00/night</a></h5></span>
                  </div>
                
                <p class="card-text"><%= campground.description %></p>
                <button type="button" class="btn btn-warning"><a href="/index">Back to Campgrounds</a></button>
              </div>
            </div>
            <div class="card">
                <div class="card-header">
                    <div class="text-right">
                        <button type="button" class="btn btn-success"><a style="color: white" href="/index/<%= campground._id %>/comments/new">Leave a Review</a></button>
                    </div>
                </div>
                <% campground.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12" style="padding: 2px 20px;">
                            <strong><%= comment.author %></strong>
                            <span class="float-right">10 days ago</span>
                            <p>
                                <%= comment.text %>
                            </p>
                        </div>
                    </div>
                    
                <% }) %>
            </div>
        </div>
    </div>
</div>





<% include ../partials/footer %>