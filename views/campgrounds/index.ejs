<% include ../partials/header %>

<div class="container">
    <div class="jumbotron" style="text-align: center">
        <h1>All the listed Campgrounds</h1> 
        <p>Some of the most beautiful campground in the world!</p>
        <div>
            <button type="button" class="btn btn-warning"><a href="/index/new">Add New Campgrounds +</a></button>    
            <button type="button" class="btn btn-warning"><a href="/">Home Page</a></button>    
        </div>
    </div>
    
    <div class="row" style="display: flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <figure class="figure">
                  <img src="<%= campground.image %>" class="img-thumbnail" >
                  <figcaption class="figure-caption text-center"><%= campground.name %></figcaption>
                </figure>
                <p style="text-align: center">
                    <button type="button" class="btn btn-warning">
                        <a href="/index/<%= campground._id %>">More Info</a>
                    </button>    
                    
                </p>
            </div>
        <% }) %>
    </div>

</div>



<% include ../partials/footer %>  