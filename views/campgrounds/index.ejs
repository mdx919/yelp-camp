<% include ../partials/header %>

<div class="container">
    <div class="jumbotron" >
        <h1>All the listed Campgrounds</h1> 
        <p>Some of the most beautiful campground in the world!</p>
        <div>
            <button type="button" class="btn btn-warning"><a href="/index/new">Add New Campgrounds +</a></button>    
            <button type="button" class="btn btn-warning"><a href="/">Home Page</a></button>    
        </div>
    </div>
    
    <div class="row row-eq-height">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="card-group">
                    <div class="card">
                        <img class="card-img-top img-responsive" src="<%= campground.image %>" alt="Card image cap">
                        <div class="card-body">
                        <h5 class="card-title"><%= campground.name %></h5>
                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                        <a href="/index/<%= campground._id %>" class="btn btn-primary">More Info</a>
                  </div>
                </div>
                </div>
            </div>
        <% }) %>
    </div>

</div>



<% include ../partials/footer %>  