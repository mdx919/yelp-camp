<% include partials/header %>

<div class="container">
    <div class="jumbotron" style="text-align: center">
        <h1>Create A New Campground</h1>        
    </div>
    
    <div class="row justify-content-center">
        <div class="col-lg-6">
                <form action="/campgrounds" method="POST">
                    <div class="form-group">
                        <input class="form-control form-control-lg input-xlarge" type="text" placeholder="Name of the campground" name="name">
                    </div>
                    <div class="form-group">
                        <input class="form-control form-control-lg" type="text" placeholder="Image URL" name="image">
                    </div>
                    <div class="form-group" style="text-align: center">
                        <button class="btn btn-primary btn-lg" type="submit">Submit</button>
                    </div>
                </form>
                <button type="button" class="btn btn-warning"><a href="/campgrounds">Back to Campground List</a></button>
        </div>
    </div>

</div>



